<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
             x:Class="glr.Views.LoginPage">
             
    <StackLayout BackgroundColor="#1E1E24">
        
        <Label Text="GLR TRANSPORT"
               TextColor="white"
               FontSize="40"
               HorizontalTextAlignment="center"
               Margin="0, 180, 0, 0"/>
        
        <Entry x:Name="emailEntry"
               Placeholder="Email"
               Margin="80, 50, 80, 0"
               BackgroundColor="White"/>
        
        
        <Entry x:Name="passwordEntry" 
               Placeholder="Password"
               Margin="80, 0, 80, 0"
               BackgroundColor="white"
               IsPassword="true"/>
        
        
        <Button Text="Login"
                BackgroundColor="#FEDC97"
                TextColor="#1E1E24"
                Margin="140, 10, 140, 0"
                BorderRadius="20"
                Clicked="LoginButtonClicked"/>
        
    </StackLayout>    
    
    
</ContentPage>
